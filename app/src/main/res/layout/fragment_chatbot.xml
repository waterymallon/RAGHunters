<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 캡처된 이미지 표시 영역 -->
    <ImageView
        android:id="@+id/captured_image_view"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:background="#EEEEEE"
        android:scaleType="fitCenter"
        android:contentDescription="Captured Object"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 챗봇 대화 표시 영역 (이미지 아래에 배치) -->
    <TextView
        android:id="@+id/chat_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="여기에 챗봇 대화가 표시됩니다."
        android:gravity="center"
        android:textSize="16sp"
        android:padding="16dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/captured_image_view"
        app:layout_constraintBottom_toTopOf="@id/input_layout" />

    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#F0F0F0"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/edit_query"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="질문을 입력하세요" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전송" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>